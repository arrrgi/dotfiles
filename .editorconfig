# EditorConfig is awesome: https://EditorConfig.org

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2
tab_width = 2

[*.{yml,yml.tmpl,yaml,yaml.tmpl,md}]
indent_style = space
