{{- $packages := splitList " " (includeTemplate "universal/packages.def" .) }}
{{- $taps := list
  "hashicorp/tap"
  "homebrew/bundle"
  "homebrew/cask-fonts"
  "olets/tap"
-}}

{{/* insert MacOS specific packages here */}}
{{- $brews := concat $packages (list
  "coreutils"
  "gitsign"
  "gnu-sed"
  "gnu-tar"
  "grep"
  "hadolint"
  "httpie"
  "poetry"
  "qbittorrent-cli"
  "shellcheck"
  "thefuck"
  "uv"
  "vivid"
  "volta"
  "yt-dlp"
)
-}}

{{- $casks := list
  "1password"
  "1password-cli"
  "arc"
  "brave-browser"
  "chatgpt"
  "cleanshot"
  "discord"
  "firefox"
  "font-jetbrains-mono-nerd-font"
  "git-credential-manager"
  "jordanbaird-ice"
  "obsidian"
  "orbstack"
  "raycast"
  "telegram"
  "todoist"
  "visual-studio-code"
  "vlc"
  "wezterm"
  "zed"
-}}

{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
