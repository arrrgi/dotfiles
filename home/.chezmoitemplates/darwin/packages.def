{{- $packages := splitList " " (includeTemplate "universal/packages.def" .) }}
{{- $taps := list
  "hashicorp/tap"
  "homebrew/bundle"
  "homebrew/cask-fonts"
  "sigstore/tap"
-}}

{{/* insert MacOS specific packages here */}}
{{- $brews := concat $packages (list
  "coreutils"
  "gnu-sed"
  "gnu-tar"
  "grep"
  "hadolint"
  "httpie"
  "poetry"
  "shellcheck"
  "thefuck"
  "tmux"
  "volta"
  "sigstore/tap/gitsign"
)
-}}

{{- $casks := list
  "1password"
  "1password-cli"
  "brave-browser"
  "cleanshot"
  "firefox"
  "font-jetbrains-mono-nerd-font"
  "git-credential-manager"
  "moom"
  "obsidian"
  "orbstack"
  "raycast"
  "telegram"
  "todoist"
  "transmit"
  "utm"
  "visual-studio-code"
  "vlc"
  "wezterm"
-}}

{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
