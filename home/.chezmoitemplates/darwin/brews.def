{{- $packages := splitList " " (includeTemplate "universal/brews.def" .) }}
{{- $taps := list
  "olets/tap"
-}}

{{/* insert MacOS specific packages here */}}
{{- $brews := concat $packages (list
  "coreutils"
  "doctl"
  "gh"
  "gnu-sed"
  "gnu-tar"
  "grep"
  "hadolint"
  "httpie"
	"mise"
  "qbittorrent-cli"
  "shellcheck"
	"tailscale"
  "thefuck"
  "vivid"
  "yt-dlp"
)
-}}

{{- $casks := list
  "1password"
  "1password-cli"
  "antinote"
	"arq"
  "cleanshot"
  "discord"
  "firefox"
  "font-jetbrains-mono-nerd-font"
  "git-credential-manager"
	"google-drive"
  "jordanbaird-ice"
  "obsidian"
  "orbstack"
  "raycast"
  "telegram"
  "todoist-app"
  "visual-studio-code"
  "vlc"
  "wezterm"
  "zed"
-}}

{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
