{{- $packages := splitList " " (includeTemplate "universal/brews.def" .) }}
{{- $taps := list
	"bellicose100xp/tap"
	"olets/tap"
-}}

{{/* insert MacOS specific packages here */}}
{{- $brews := concat $packages (list
	"corepack"
	"coreutils"
	"doctl"
	"gemini-cli"
	"gh"
	"glow"
	"gnu-sed"
	"gnu-tar"
	"grep"
	"hadolint"
	"httpie"
	"imagemagick"
	"mise"
	"qbittorrent-cli"
	"shellcheck"
	"thefuck"
	"vivid"
	"yt-dlp"
)
-}}

{{- $casks := list
	"1password"
	"1password-cli"
	"antinote"
	"arq"
	"cleanshot"
	"discord"
	"fastmail"
	"firefox"
	"font-jetbrains-mono-nerd-font"
	"font-maple-mono-nf"
	"font-monaspice-nerd-font"
	"ghostty"
	"git-credential-manager"
	"google-drive"
	"iina"
	"jordanbaird-ice"
	"obsidian"
	"orbstack"
	"raycast"
	"tailscale-app"
	"telegram"
	"todoist-app"
	"visual-studio-code"
	"windows-app"
	"zed"
-}}

{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
