#!/usr/bin/env bash

# Check for Homebrew
if ! command -v brew &> /dev/null; then
    echo "Info: Homebrew is not installed. Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
else
    echo "Info: Homebrew is already installed. Continuing..."
fi

# Show Homebrew version
BREW_VERSION="$(${BREW_PATH} --version)"
echo "Info: Successfully installed ${BREW_VERSION}"
